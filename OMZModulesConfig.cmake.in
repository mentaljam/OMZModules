set(@PROJECT_NAME@_VERSION_STRING "@V_VERSION@")
set(@PROJECT_NAME@_VERSION_MAJOR  "@CPACK_PACKAGE_VERSION_MAJOR@")
set(@PROJECT_NAME@_VERSION_MINOR  "@CPACK_PACKAGE_VERSION_MINOR@")
set(@PROJECT_NAME@_VERSION_PATCH  "@CPACK_PACKAGE_VERSION_PATCH@")

message(STATUS "Found OMZ CMake modules v${@PROJECT_NAME@_VERSION_STRING}")

list(APPEND CMAKE_MODULE_PATH ${CMAKE_CURRENT_LIST_DIR}/Modules)
string(TOUPPER "@PROJECT_NAME@" PROJECT_NAME_UPPER)
file(GLOB ${PROJECT_NAME_UPPER}
     RELATIVE ${CMAKE_CURRENT_LIST_DIR}/Modules
     ${CMAKE_CURRENT_LIST_DIR}/Modules/*.cmake)

message(STATUS "All OMZ modules are listed in '${PROJECT_NAME_UPPER}'")
