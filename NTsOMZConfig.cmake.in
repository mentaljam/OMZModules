set(NTsOMZ_VERSION_STRING "@V_VERSION@")
set(NTsOMZ_VERSION_MAJOR  "@CPACK_PACKAGE_VERSION_MAJOR@")
set(NTsOMZ_VERSION_MINOR  "@CPACK_PACKAGE_VERSION_MINOR@")
set(NTsOMZ_VERSION_PATCH  "@CPACK_PACKAGE_VERSION_PATCH@")

message(STATUS "Found OMZ CMake modules v${NTsOMZ_VERSION_STRING}")

list(APPEND CMAKE_MODULE_PATH ${CMAKE_CURRENT_LIST_DIR}/Modules)
file(GLOB OMZMODULES
